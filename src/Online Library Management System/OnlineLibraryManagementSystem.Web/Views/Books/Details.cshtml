@model BookServiceModel

@{
    ViewData["Title"] = $"Details for {Model.Title} book";
}

<br />

<h2 class="text-center">@ViewData["Title"]</h2>

<br />
<br />

<div>
    <h5>This book was borrowed @Model.BorrowedTimes times.</h5>
</div>

<br />

<div>
    <h4>@Model.Title  book is added by: <a asp-area="" asp-controller="Books" asp-action="ByAuthor" asp-route-id="@Model.AuthorId"><b>@Model.Author</b></a></h4>
</div>

<br />

<div>
    <h4>Description of the book:</h4>
    <p><h6>@Model.Description</h6></p>
</div>

<br />

@if (Model.Borrower != null)
{
    <div>
        This book is currently borrowed by <a asp-area="" asp-controller="Books" asp-action="ByAuthor" asp-route-id="@Model.BorrowerId">@Model.Borrower</a>
    </div>
}