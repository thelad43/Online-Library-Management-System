@model AllUsersListingAdminModel

@{
    ViewData["Title"] = "All Users along their roles";
    var i = 0;
}

<h2 class="text-center">@ViewData["Title"]</h2>

<br />

<div class="col">
    <div class="col-md-6">

        <table class="table table-hover" style="margin-left: 300px">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">UserName</th>
                    <th scope="col">Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    i++;
                    <tr>
                        <th scope="row">@((Model.Page.CurrentPage - 1) * 10 + i)</th>
                        <td>@user.UserName</td>
                        <td>@user.Role</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>